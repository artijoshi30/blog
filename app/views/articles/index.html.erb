<h1 class="my-3">Articles</h1>
  <div class="">
     <%= button_to "Add New Article", { :action=>"new" }, method: "get", class: 'btn btn-success' %>
  </div>
<br>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      <% @articles.each do |article| %>
    <tr>
        <td> <%= article.title %></td>
        <td class="col-7"> <%= article.body%></td>
        <td>
          <% if article.image.present? %>
            <%= image_tag article.image.url, size: "50x50" %>
            <% end %>
        </td>

        <td class="col-2">
          <%= link_to article_path(article) do %>
            <i class="fas fa-eye fa-1x mx-2" style="color:black"></i>
          <% end %>
          <% if article.user_id == current_user.id %>
          <%= link_to edit_article_path(article) do %>
            <i class="fas fa-edit fa-1x mx-2"></i>
          <% end %>
          <%= link_to article_path(article),
            data: {confirm: "Really delete this article?"} do %>
            <i class="fas fa-trash fa-1x mx-2" style="color:red"></i>
          <% end %>
          <% end %>
        </td>
    </tr>
      <% end %>
  </tbody>
</table>

