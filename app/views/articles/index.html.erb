  <div class="container">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-9">
            <h2>Manage Blog</h2>
          </div>
          <div class="col-sm-3">
              <i class="fa-solid fa-circle-plus"></i>
              <%= button_to "Add New Article", { :action=>"new" }, method: "get", class: 'btn btn-success' %>
          </div>
      </div>
    </div>
    <table class="table table-striped table-hover" id="table-id">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
      <tr>
          <td>
            <% if article.image.present? %>
              <%= image_tag article.image.url, size: "60x60", class: "rounded-circle" %>
            <% end %>
          </td>
          <td> <%= article.title %></td>
          <td class="col-7"> <%= article.body%></td>

          <td class="col-2">
            <%= link_to article_path(article) do %>
              <i class="fas fa-eye fa-1x mx-2" style="color:black"></i>
            <% end %>
            <% if article.user_id == current_user.id %>
              <%= link_to edit_article_path(article) do %>
                <i class="fas fa-edit fa-1x mx-2" style="color: #FFC107;"></i>
              <% end %>
              <%= link_to article_path(article),
                data: {confirm: "Really delete this article?"} do %>
                <i class="fas fa-trash fa-1x mx-2" style="color: #F44336;"></i>
              <% end %>
            <% end %>
          </td>
      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <script type="text/javascript">
  $(document).ready(function() {
     $.noConflict();
    $('#table-id').DataTable();
  });
</script>