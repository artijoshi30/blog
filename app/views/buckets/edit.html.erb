<h1><%= "EDIT:" + @bucket.name %></h1>
	<%= form_for(@bucket) do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>
	<%= f.submit %><br>
	<% end %><br>
	<%= button_to "Delete Bucket", @bucket,
		:method => :delete,
		data: {confirm: 'Are You Sure?'}, :class => 'btn btn-danger btn-md rounded-0' %>