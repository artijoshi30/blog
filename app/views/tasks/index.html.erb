<h1>Tasks List</h1>
	<%= button_to "Create Task", new_task_path, method: :get, :class => 'btn btn-primary btn-md' %>
<h3>Pending tasks</h3>
<ul>
	<% @pending_tasks.each do |task| %>
	<li><%= link_to task.name, task_path(task) %></li>
	<% end %>
</ul>
<h3>Completed Tasks</h3>
<ul>
	<% @completed_tasks.each do |task| %>
	<li><%= link_to task.name, task_path(task) %></li>
	<% end %>
</ul>