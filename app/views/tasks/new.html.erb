<h1>Create New Task</h1>
<%= form_for(@task) do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>
	<%= f.label "Bucket" %><br>
	<%= f.collection_select :bucket_id, Bucket.order(:name),:id, :name %><br><br>
	<%= f.submit %>
	<% end %>